<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="50dp" />
    <gradient
        android:angle="45"
        android:centerX="50%"
        android:centerY="50%"
        android:endColor="#bf73ae"
        android:gradientRadius="0"
        android:startColor="#8A4F7D"
        android:type="linear" />
    <size
        android:width="100dp"
        android:height="100dp" />
